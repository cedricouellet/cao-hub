@model PersonListViewModel

@{
    ViewData["Title"] = "People";
}

<div class="flex justify-between mb-3">
    <h1>People</h1>
    <a class="btn-primary" asp-action="Create" asp-controller="People" asp-area="ReceiptManagement">Add</a>
</div>

<div class="flex flex-col gap-2">
    @foreach (var person in Model.People)
    {
        <div class="p-3 rounded-lg border border-border flex flex-col justify-between gap-1">
            <span class="font-bold">@person.Name</span>
            <div class="flex justify-end">
                <a asp-action="Delete" asp-controller="People" asp-area="ReceiptManagement" asp-route-id="@person.Id">
                    <i class="btn-icon fa fa-trash"></i>
                </a>
            </div>
        </div>
    }
</div>