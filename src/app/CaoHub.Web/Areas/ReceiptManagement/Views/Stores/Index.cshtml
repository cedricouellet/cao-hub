@model StoreListViewModel

@{
    ViewData["Title"] = "Stores";
}

<div class="p-4">
    <div class="flex flex-row justify-between items-center w-full mb-3">
        <h1>Stores</h1>
        <a class="btn-primary" asp-action="Create" asp-controller="Stores" asp-area="ReceiptManagement">Add</a>
    </div>

    <div class="flex flex-wrap gap-2">
        @foreach (var store in Model.Stores)
        {
            <div class="p-4 w-full lg:w-auto rounded-lg border border-border flex flex-col flex-wrap justify-between gap-2">
                <div class="flex flex-row justify-between">
                    <span class="font-bold">@store.Name</span>
                </div>
                <span class="text-muted">@store.StoreCategoryName</span>
                <div class="flex justify-end">
                    <a asp-action="Delete" asp-controller="Stores" asp-area="ReceiptManagement" asp-route-id="@store.Id"><i class="btn-icon fa fa-trash"></i></a>
                </div>
            </div>
        }
    </div>
</div>