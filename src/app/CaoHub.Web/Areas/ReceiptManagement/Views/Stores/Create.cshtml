@model StoreCreateViewModel

@{
    ViewData["Title"] = "New Store";
}

<h1 class="mb-3">New Store</h1>

<form asp-action="Create" asp-controller="Stores" asp-area="ReceiptManagement" asp-antiforgery="true">
    <div class="flex flex-col gap-4">
        <div>
            <label asp-for="Name">Name*</label>
            <input asp-for="Name" autocomplete="off" placeholder="e.g. Costco" />
            <span class="input-error" asp-validation-for="Name"></span>
            <span class="input-helper-text">Enter a unique name for the store category. It will later be available for use to categorize stores.</span>
        </div>
        <div>
            <label asp-for="StoreCategoryId">Category*</label>
            @Html.DropDownListFor(x => x.StoreCategoryId, Model.StoreCategories, "--")
            <span class="input-error" asp-validation-for="StoreCategoryId"></span>
            <span class="input-helper-text">Enter a category. It will later be used to group stores together.</span>
        </div>
        <div class="flex justify-center gap-2">
            <button type="submit" class="btn-primary">Add</button>
            <a role="link" asp-action="Index" asp-controller="Stores" asp-area="ReceiptManagement" class="btn-secondary">Cancel</a>
        </div>
    </div>
</form>