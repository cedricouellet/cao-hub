@model StoreViewModel

@{
    ViewData["Title"] = "Delete Store";
}

<h1 class="mb-3">Delete Store</h1>

<div class="flex flex-col gap-4">
    <div class="bg-accent-light text-accent border border-accent rounded-lg shadow-sm p-3 flex flex-col gap-3">
        <p class="font-bold">Are you sure you wish to delete the store named "@Model.Name" of category "@Model.StoreCategoryName"?</p>
        <p class="text-justify">Data related to it will be kept to maintain data integrity.</p>
        <p class="text-justify">However, it will be hidden, therefore no longer accessible.</p>
    </div>

    <form asp-action="ConfirmDelete" asp-controller="Stores" asp-area="ReceiptManagement" asp-route-id="@Model.Id" asp-antiforgery="true" method="post">
        <div class="flex justify-center gap-2">
            <button class="btn-primary" type="submit">Yes, I'm sure</button>
            <a class="btn-secondary" asp-action="Index" asp-controller="Stores" asp-area="ReceiptManagement">No, nevermind</a>
        </div>
    </form>
</div>