@model TaxCreateViewModel

@{
    ViewData["Title"] = "New Tax";
}

<h1 class="mb-3">New Tax</h1>

<form asp-action="Create" asp-controller="Taxes" asp-area="ReceiptManagement" asp-antiforgery="true">
    <div class="flex flex-col gap-4">
        <div>
            <label asp-for="Name">Name*</label>
            <input asp-for="Name" autocomplete="off" placeholder="e.g. TPS" />
            <span class="input-error" asp-validation-for="Name"></span>
            <span class="input-helper-text">Enter a unique name for the tax. It will later be available for use in receipt creation.</span>
        </div>
        <div>
            <label asp-for="RatePercentage">Rate (%)*</label>
            <input asp-for="RatePercentage" type="number" step="0.001" autocomplete="off" placeholder="e.g. 14.975%" />
            <span class="input-error" asp-validation-for="RatePercentage"></span>
            <span class="input-helper-text">Enter a rate for the tax, in percentage.</span>
        </div>
        <div>
            <label asp-for="Description">Description</label>
            <input asp-for="Description" autocomplete="off" placeholder="e.g. taxe sur les produits et services" />
            <span class="input-error" asp-validation-for="Description"></span>
            <span class="input-helper-text">(Optional) Enter a description for the tax, perhaps a name that is more easily understood than its acronym.</span>
        </div>
        <div class="flex justify-center gap-2">
            <button type="submit" class="btn-primary">Add</button>
            <a role="link" asp-action="Index" asp-controller="Taxes" asp-area="ReceiptManagement" class="btn-secondary">Cancel</a>
        </div>
    </div>
</form>
