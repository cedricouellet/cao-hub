@model ProductListViewModel

@{
    ViewData["Title"] = "Products";
}

<div class="p-4">
    <div class="flex flex-row justify-between items-center w-full mb-3">
        <h1>Products</h1>
        <a class="btn-primary" asp-action="Create" asp-controller="Products" asp-area="ReceiptManagement">Add</a>
    </div>

    <div class="flex flex-wrap gap-2">
        @foreach (var product in Model.Products)
        {
            <div class="p-4 w-full items-center rounded-lg border border-border flex justify-between">
                <span class="font-bold">@product.Name</span>
                <a asp-action="Delete" asp-controller="Products" asp-area="ReceiptManagement" asp-route-id="@product.Id"><i class="btn-icon fa fa-trash"></i></a>
            </div>
        }
    </div>
</div>