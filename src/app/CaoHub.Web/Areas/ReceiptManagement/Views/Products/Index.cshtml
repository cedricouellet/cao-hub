@model ProductListViewModel

@{
    ViewData["Title"] = "Products";
}

<div class="flex justify-between mb-3">
    <h1>Products</h1>
    <a class="btn-primary" asp-action="Create" asp-controller="Products" asp-area="ReceiptManagement">Add</a>
</div>

<div class="flex flex-col gap-2">
    @foreach (var product in Model.Products)
    {
        <div class="p-3 rounded-lg border border-border flex flex-col justify-between gap-1">
            <span class="font-bold">@product.Name</span>
            <div class="flex justify-end">
                <a asp-action="Delete" asp-controller="Products" asp-area="ReceiptManagement" asp-route-id="@product.Id">
                    <i class="btn-icon fa fa-trash"></i>
                </a>
            </div>
        </div>
    }
</div>