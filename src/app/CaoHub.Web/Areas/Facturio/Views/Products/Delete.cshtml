@inject IStringLocalizer<SharedResource> Loc
@model ProductViewModel

@{
    ViewData["Title"] = Loc["Facturio_Products_Delete"];
}

<h1 class="mb-3">@Loc["Facturio_Products_Delete"]</h1>

<div class="flex flex-col gap-4">
    <div class="bg-accent-light text-accent border border-accent rounded-lg shadow-sm p-3 flex flex-col gap-3">
        <p class="font-bold">@Loc["Facturio_Products_ConfirmDelete", Model.Name]</p>
        <p class="text-justify">@Loc["DeleteDescription"]</p>
        <p class="text-justify"></p>
    </div>

    <form asp-action="Delete" asp-route-id="@Model.Id" asp-antiforgery="true" method="post">
        <div class="flex justify-center gap-2">
            <button class="btn-primary" type="submit">@Loc["Confirm"]</button>
            <a class="btn-secondary" asp-action="Index">@Loc["Cancel"]</a>
        </div>
    </form>
</div>