@inject IStringLocalizer<SharedResource> Loc
@model TaxEditViewModel

@{
    ViewData["Title"] = Loc["Facturio_Taxes_Edit"];
}

<h1 class="mb-3">@Loc["Facturio_Taxes_Edit"]</h1>

<form asp-action="Edit" method="post" asp-antiforgery="true">
    <div class="flex flex-col gap-4">
        <div>
            <label asp-for="Name"></label>
            <input asp-for="Name" autocomplete="off" placeholder="@Loc["Facturio_Taxes_Name_Placeholder"]" />
            <span class="input-error" asp-validation-for="Name"></span>
            <span class="input-helper-text">@Loc["Facturio_Taxes_Name_HelperText"]</span>
        </div>
        <div>
            <label asp-for="Value"></label>
            <input asp-for="Value" type="number" step="0.001" autocomplete="off" placeholder="@Loc["Facturio_Taxes_Value_Placeholder"]" />
            <span class="input-error" asp-validation-for="Value"></span>
            <span class="input-helper-text">@Loc["Facturio_Taxes_Value_HelperText"]</span>
        </div>
        <div>
            <label asp-for="CalculationMethod"></label>
            <select asp-for="CalculationMethod" asp-items="@Model.CalculationMethods">
                <option value="@null">--</option>
            </select>
            <span class="input-error" asp-validation-for="CalculationMethod"></span>
            <span class="input-helper-text">@Loc["Facturio_Taxes_CalculationMethod_HelperText"]</span>
        </div>
        <div>
            <label asp-for="Description"></label>
            <input asp-for="Description" autocomplete="off" placeholder="@Loc["Facturio_Taxes_Description_Placeholder"]" />
            <span class="input-error" asp-validation-for="Description"></span>
            <span class="input-helper-text">@Loc["Facturio_Taxes_Description_HelperText"]</span>
        </div>
        <div class="flex justify-center gap-2">
            <button type="submit" class="btn-primary">@Loc["Update"]</button>
            <a role="link" asp-action="Index" class="btn-secondary">@Loc["Cancel"]</a>
        </div>
    </div>

    @Html.HiddenFor(x => x.Id)
</form>