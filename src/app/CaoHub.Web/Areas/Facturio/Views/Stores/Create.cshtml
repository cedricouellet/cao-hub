@inject IStringLocalizer<SharedResource> Loc
@model StoreEditViewModel

@{
    ViewData["Title"] = Loc["Facturio_Stores_Create"];
}

<h1 class="mb-3">@Loc["Facturio_Stores_Create"]</h1>

<form asp-action="Create" asp-antiforgery="true">
    <div class="flex flex-col gap-4">
        <div>
            <label asp-for="Name"></label>
            <input asp-for="Name" autocomplete="off" placeholder="@Loc["Facturio_Stores_Name_Placeholder"]" />
            <span class="input-error" asp-validation-for="Name"></span>
            <span class="input-helper-text">@Loc["Facturio_Stores_Name_HelperText"]</span>
        </div>
        <div>
            <label asp-for="StoreCategoryId"></label>
            <select asp-for="StoreCategoryId" asp-items="Model.StoreCategories">
                <option value="@null">--</option>
            </select>
            <span class="input-error" asp-validation-for="StoreCategoryId"></span>
            <span class="input-helper-text">@Loc["Facturio_Stores_StoreCategoryId_HelperText"]</span>
        </div>
        <div class="flex justify-center gap-2">
            <button type="submit" class="btn-primary">@Loc["Add"]</button>
            <a role="link" asp-action="Index" class="btn-secondary">@Loc["Cancel"]</a>
        </div>
    </div>
</form>